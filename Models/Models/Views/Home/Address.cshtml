@model IEnumerable<Models.Models.Address>

@{
    ViewBag.Title = "Address";
}

<h2>Address</h2>

@if (!Model.Any())
{
    using (Html.BeginForm())
    {
        for (int i = 0; i < 3; i++)
        {
            <fieldset>
                <legend>Address @(i+1)</legend>
                <div>
                    <label>City:</label>@Html.Editor("[" + i + "].City")
                </div>
                <div>
                    <label>Country:</label>@Html.Editor("[" + i + "].Country")
                </div>
            </fieldset>
        }
        <button type="submit">Submit</button>
    }
}
else
{
    foreach (var str in Model)
    {
        <fieldset>
            <legend>Address</legend>
            <div>
                <label>City:</label>@str.City
            </div>
            <div>
                <label>Country:</label>@str.Country
            </div>
        </fieldset>

    }
    @Html.ActionLink("Back", "Address")
}
